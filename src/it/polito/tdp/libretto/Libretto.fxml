<BorderPane xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.libretto.LibrettoController">
   <top>
      <Label text="Libretto Universitario" textFill="#e41717" BorderPane.alignment="CENTER">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.0" minWidth="57.0" prefWidth="59.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="241.0" minWidth="154.0" prefWidth="239.0" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="txtCodice" GridPane.rowIndex="1" />
                  <TextField fx:id="txtTitolo" prefHeight="25.0" prefWidth="297.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="txtDocente" prefHeight="25.0" prefWidth="104.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Label text="Codice" />
                  <Label text="Titolo" GridPane.columnIndex="1" />
                  <Label text="Docente" GridPane.columnIndex="2" />
                  <Button fx:id="btnInserisci" mnemonicParsing="false" onAction="#handleInserisci" text="Inserisci" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <Button fx:id="btnCerca" mnemonicParsing="false" onAction="#handleCerca" text="Cerca" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <TextArea fx:id="txtMessage" editable="false" />
         </children>
      </VBox>
   </center>
</BorderPane>
